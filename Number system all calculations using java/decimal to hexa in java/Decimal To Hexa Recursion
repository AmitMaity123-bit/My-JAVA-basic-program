public class DecimalToHexRecursive {
    public static void main(String[] args) {
        System.out.println("Enter the number to change decimal to hexadecimal : ");
        Scanner amit = new Scanner(System.in);
        int decimal = amit.nextInt();
        System.out.print("Hexadecimal of " + decimal + " is: ");
        decimalToHex(decimal);
    }

    public static void decimalToHex(int num) {
        char[] hexDigits = "0123456789ABCDEF".toCharArray();
        if (num >= 16) {
            decimalToHex(num / 16);
        }
        System.out.print(hexDigits[num % 16]);
    }
}
