import java.util.Scanner;

class BiggestNumber {
    public static void main(String[] args) {
        Scanner amit = new Scanner(System.in);

        System.out.print("How many numbers do you want to enter? ");
        int n = amit.nextInt();

        if (n <= 0) {
            System.out.println("Please enter at least one number.");
            return;
        }

        System.out.print("Enter number 1: ");
        int big =  amit.nextInt();  // assume first number is biggest initially

        // loop for remaining numbers
        for (int i = 2; i <= n; i++) {
            System.out.print("Enter number " + i + ": ");
            int num =  amit.nextInt();

            // use ternary operator to update biggest number
            big = (num > big) ? num : big;
        }

        System.out.println("The biggest number is: " + big);

         amit.close();
    }
}
